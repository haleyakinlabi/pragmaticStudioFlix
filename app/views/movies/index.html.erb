<% @movies.each do |movie| %>
  <section class="movie">
    <div class="summary">
      <h2><%= link_to movie.name, movie %></h2>
      <%= movie.rating %>
      <h3><%= total_gross(movie) %></h3>
      <p>
        <%= truncate(movie.description, length: 40, separator: ' ') %>
      </p>
      <p>
        <%= year_of(movie)%>
      </p>
    </div>
  </section>
<% end %>
<section class="admin">
  <%= link_to 'Add New Movie', new_movie_path, class: "button" %>
</section>