<ul>
  <% @movies.each do |movie| %>
    <li>
      <strong><%= movie.name %></strong>
      rating: <%= movie.rating %>
      total gross: <%= total_gross(movie) %>
    </li>
    <p>
      <%= truncate(movie.description, length: 40, separator: ' ') %>
    </p>
    <p>
      <%= year_of(movie)%>
    </p>
  <% end %>
</ul>